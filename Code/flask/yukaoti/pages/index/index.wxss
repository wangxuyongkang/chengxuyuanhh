/* pages/image/demo1/index.wxss */
.img-list1{
    width: 100%;
    /*overflow: hidden;*/
    height: 600px;
}
.img-list1 .ul{
    margin-left:-2%;
}
.img-list1 .li{
    width: 48%;
    height: 180px;
    overflow: hidden;
    position: relative;
    float:left;
    margin-left:2%;
    margin-top:10px;
}
.img-list1 .li navigator{
    width: 100%;
    height: 100%;
}
.img-list1 .li image{
    width: 100%;
    min-height: 100%;

}
.img-list1 .li text{
    position: absolute;
    bottom:0;
    left: 0;
    z-index: 2;
    width: 96%;
    padding:0 2%;
    height: 35px;
    line-height: 35px;
    color:#fff;
}
.img-list1 .li .bg{
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 35px;
    background-color: #000;
    opacity: .5;
}
.no-more-pic{
  text-align: center;
  font-size: 24rpx;
  padding-bottom:48rpx; 
  color: #999;
}